{
  "extends": "@tsconfig/node18-strictest-esm/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "target": "ESNext",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "ignoreDeprecations": "5.0",
    "paths": {
      "@*": [
        "./src/*",
        "../*"
      ]
    },
    "module": "CommonJS",
    "outDir": "dist"
  }
}
