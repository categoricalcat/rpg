{
  "name": "rpg",
  "version": "0.0.0",
  "description": ".",
  "homepage": "https://github.com/walze/rpg#readme",
  "bugs": {
    "url": "https://github.com/walze/rpg/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/walze/rpg.git"
  },
  "license": "ISC",
  "author": "Wallace Fares, Juan Dornelles, Jaime Barbosa",
  "scripts": {
    "build": "vite build --base ./ --force -d",
    "dev": "nodemon --ext .js,.ts,.html --watch . --exec 'pnpm start'",
    "docker": "bash ./scripts/start.bash",
    "gen:prisma": "prisma format && prisma generate",
    "preinstall": "ncu && pnpm sort",
    "sort": "npx sort-package-json",
    "start": "concurrently -n client,server 'pnpm:start:client' 'pnpm:start:server'",
    "start:client": "vite --force",
    "start:server": "ts-node -r tsconfig-paths/register -P . server/src/index.ts"
  },
  "workspaces": [
    "client",
    "server"
  ]
}
