// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  name    String    @id @map("_id")
  Message Message[]
}

model Message {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  text      String
  user      User     @relation(fields: [uName], references: [name])
  uName     String
  createdAt DateTime @default(now())
}

type Attribute {
  STR Int
  DEX Int
  CON Int
  INT Int
  WIS Int
  CHA Int
  PWR Int
}

enum Types {
  ITEM
  SPELL
}

type Item {
  name        String
  description String
  exertion    String
  modifier    Attribute?
  toggle      Boolean?
  type        Types
}

model Sheet {
  name        String    @id @map("_id")
  description String
  attribute   Attribute
  items       Item[]
}
