// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  name     String    @id @map("_id")
  Sent     Message[] @relation("Sent")
  Received Message[] @relation("Received")
}

model Message {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  text      String
  sender    User     @relation("Sent", fields: [sName], references: [name])
  sName     String
  receiver  User     @relation("Received", fields: [rName], references: [name])
  rName     String
  createdAt DateTime @default(now())
}

type Attribute {
  STR Int
  DEX Int
  CON Int
  INT Int
  WIS Int
  CHA Int
  PWR Int
}

enum Types {
  ITEM
  SPELL
}

type Item {
  photo       String
  name        String // Sword
  description String
  exertion    String // 2.6 + 5 + STR
  modifier    Attribute? // { STR: 1, DEX: -1 }
  active      Boolean? //
  type        Types
}

model Race {
  name        String    @id @map("_id")
  description String
  attributes  Attribute
  Sheet       Sheet[]
}

model Sheet {
  photo       String
  name        String    @id @map("_id")
  race        Race      @relation(fields: [rName], references: [name])
  rName       String
  description String
  attribute   Attribute
  items       Item[]
}
